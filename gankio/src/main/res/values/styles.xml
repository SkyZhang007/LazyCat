<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red400</item>
    </style>

    <style name="FloatingActionButtonOverlay" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/blue100</item>
    </style>

    <style name="CardViewStyle" parent="Base.CardView">
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="RatingBarStyle" parent="Base.Widget.AppCompat.RatingBar.Small">
    </style>

</resources>
