<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonOverlay</item>
        <item name="materialCardViewStyle">@style/CardViewStyle</item>
        <item name="buttonStyle">@style/CommonButton</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="FloatingActionButtonOverlay" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/blue100</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性边距为0dp-->
    </style>

    <style name="RatingBarStyle" parent="Base.Widget.AppCompat.RatingBar.Small">
    </style>

    <style name="DividerStyle">
        <item name="android:background">@color/colorDivider</item>
        <item name="android:alpha">0.8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="CommonButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
    </style>

</resources>
